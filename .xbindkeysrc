"amixer -D pulse set Master 5%+"
   XF86AudioRaiseVolume

"amixer -D pulse set Master 5%-"
   XF86AudioLowerVolume

"amixer -D pulse set Master toggle"
   XF86AudioMute

"xbacklight -dec 5%"
    XF86MonBrightnessDown

"xbacklight -inc 5%"
    XF86MonBrightnessUp

"toggle_monitor"
    XF86Display
